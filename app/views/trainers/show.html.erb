<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>
<h4>Pokemon</h4>
<ul>
<% @trainer.pokemons.each do |u| %>
	<li><%= u.name %> <%=u.level %> <%= u.health %> <%= button_to "Damage!", damage_path(id: u), :class => "button medium", :method => :patch %></li>
<% end %>

<%= button_to "New Pokemon", new_path, :class => "button medium", :method => :get %>
</ul>
